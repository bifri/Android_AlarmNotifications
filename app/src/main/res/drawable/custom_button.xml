<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/orangelight"
                android:startColor="@color/orangedark"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/grey05" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="@dimen/view_horizontal_margin"
                android:right="@dimen/view_horizontal_margin"
                android:top="@dimen/view_vertical_margin"
                android:bottom="@dimen/view_vertical_margin" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/bluelight"
                android:startColor="@color/bluedark"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/grey05" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="@dimen/view_horizontal_margin"
                android:right="@dimen/view_horizontal_margin"
                android:top="@dimen/view_vertical_margin"
                android:bottom="@dimen/view_vertical_margin" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#fff9c4"
                android:endColor="#ffeb3b"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/grey05" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="@dimen/view_horizontal_margin"
                android:right="@dimen/view_horizontal_margin"
                android:top="@dimen/view_vertical_margin"
                android:bottom="@dimen/view_vertical_margin" />
        </shape>
    </item>
</selector>